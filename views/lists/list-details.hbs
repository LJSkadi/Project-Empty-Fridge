<h1>{{ list.name }} <small>details</small></h1>
{{this.openItems}}
<div class="row">
  <div class="col-md-8">
    <h2>Items</h2>
    {{#if openItems}}
    <ul>
      {{#each openItems}}
        <li> 
          <a href="/delete-item/{{this._id}}">delete</a>
          {{ this.content }} 
        </li>
      {{/each}}
    </ul>
    {{else}}
      <p>You're list is empty. Add some content.</p>
    {{/if}}
    
    <h2>Closed Items</h2>
    {{#if closedItems}}
    <ul>
      {{#each closedItems}}
        <li> 
          <a href="/reactivate-item/{{this._id}}">reactivate</a>
          {{ this.content }} 
        </li>
      {{/each}}
       {{else}}
      <p>All items are open. Be a nice person and close.</p>
    {{/if}}
    </ul>

    <form class="form-inline" action="/add-new-item" method="post">
      <div class="form-group mb-2">
        <input type="text" class="form-control" name="newItemInput" placeholder="Enter item">
      </div>
      <div class="form-group">
        <input name="listId" type="hidden" value="{{list._id}}">
      </div>
      <button type="submit" class="btn btn-success mb-2">Add Item</button>
    </form>
  </div>

  <!-- SEARCH USERS -->
  <div class="col-md-4">
    <form class="form-inline" action="/search-user" method="post">
      <div class="form-group mb-2">
        <input type="email" class="form-control" name="searchedEmail" placeholder="Search for email">
      </div>
      <div class="form-group">
        <input type="hidden" name="listId" value="{{list._id}}">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary mb-2">Search</button>
      </div>
    </form>

    <div id="search-result">
      {{#if foundUsers}}
        <ul>
          {{#each foundUsers}}
            <li>
              <form action="/create-invitation" method="post">
                <input type="hidden" name="invitedUserId" value="{{this._id}}">
                <input type="hidden" name="listId" value="{{../list._id}}">
                <button type="submit" class="btn btn-sm btn-success">Invite</button>
                {{this.email}}
              </form>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>

  </div>
</div>