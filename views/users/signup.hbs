<!-- views/auth/signup.hbs -->
<h2>Signup</h2>

<div class="row">
  <div class="col-md-4">
    {{#if message }}
      <div class="alert {{#if messageType}} alert-{{messageType}} {{else}} alert-warning {{/if}} alert-dismissible fade show" role="alert">
        <strong>{{ message }}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    {{/if}}
    <form action="/signup" method="post" enctype="multipart/form-data">

      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" id="username" type="text" name="username" placeholder="Enter your username">
      </div>  

      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" id="email" type="email" name="email" placeholder="Enter your email address">
      </div>

      <div class="form-group">
        <label for="photo">Profile image</label>
        <input type="file" class="form-control-file" id="photo" name="photo" >
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" id="password" type="password" name="password" placeholder="Enter your password">
      </div>

      <button type="submit" class="btn btn-success">Create account</button>
    </form>
  </div>  

</div>

<p class="account-message lead">
  Do you already have an account?
  <a href="/login">Login</a>
</p>
