<!-- PROFILE.hbs -->
<div class="cards-container d-flex flex-wrap justify-content-center align-content-center">
    <div class="card details" style="width: 20rem;">
        <img class="card-img-top" src="{{user.profileImage}}" alt="Card image cap">
        <div class="card-body">
            <h1 class="card-title">
                <strong>{{user.username}}</strong>
            </h1>
            <div>
                <p>
                    <strong>Username:</strong> {{user.username}}</p>
                <p>
                    <strong>Email:</strong> {{user.email}}</p>
                <p>
                    <strong>Password:</strong> We don't show your Password to anybody
                    <br> but you can change it</p>
                <p>
                    <strong>Your Lists:</strong>
                    <ul>
                        {{#each lists}}
                        <li>
                            {{ this.name }}
                            <a href="/delete-list/{{lists._id}}">delete</a>
                        </li>
                        {{/each}}
                    </ul>
                </p>
            </div>
        </div>
        <p>
            <a href="/user/{{user._id}}/profile/edit" class="btn btn-primary btn active" role="button">Edit my Profile</a>
        </p>
                <p>
            <a href="/user/{{user._id}}/profile/delete" class="btn btn-danger btn active" role="button">Delete my Profile</a>
        </p>
        <p>
            <a href="/user/{{user._id}}" class="btn btn-primary btn active" role="button">Back to my Dashboard!</a>
        </p>
    </div>
</div>