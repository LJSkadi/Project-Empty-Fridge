<!-- PROFILE-EDIT.hbs -->
<div class="cards-container d-flex flex-wrap justify-content-center align-content-center">
    <div class="card details" style="width: 20rem;">
        <div>
            <img class="card-img-top" src="{{user.profileImage}}" alt="Card image cap">
            <form class="card-body">
                <h1 class="card-title">
                    <strong>{{user.username}}</strong>
                </h1>
                <form action="/user/{{user._id}}/profile/update" method="post">
                    <div class="form-group">
                        <label for="">Username:</label>
                        <input class="form-control" type="text" name="username" value="{{user.username}}">
                    </div>
                    <div class="form-group">
                        <label for="">Password:</label>
                        <input class="form-control" type="password" name="password" placeholder="Enter new password">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control-file" id="image" type="file" name="image" value="{{user.profileImage}}">
                    </div>
                    <div class="form-group">
                        <p>
                            <button type="submit" class="btn btn-success">Update profile</button>
                            <a class="btn btn-primary" href="/user/{{user._id}}/profile">Back</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>